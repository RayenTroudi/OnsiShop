{
  "private": true,
  "packageManager": "pnpm@8.2.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "test": "pnpm lint && pnpm prettier:check",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:seed": "npx prisma db seed",
    "db:seed-translations": "npx tsx scripts/seed-translations.ts",
    "db:seed-all": "npx prisma db seed && npx tsx scripts/seed-additional.ts && npx tsx scripts/add-more-products.ts && npx tsx scripts/add-missing-data.ts && npx tsx scripts/restore-media-assets.ts && npx tsx scripts/add-about-background.ts && npx tsx scripts/add-background-video.ts && npx tsx scripts/seed-reviews.ts && npx tsx scripts/seed-translations.ts",
    "db:backup": "npx tsx scripts/backup-database.ts",
    "db:restore": "npx tsx scripts/restore-database.ts",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset --force",
    "db:setup": "npx prisma generate && npx prisma db push && pnpm db:seed-all",
    "db:init": "npx prisma generate && npx prisma db push && npx prisma db seed",
    "vercel:build": "prisma generate && prisma db push && next build",
    "vercel:postbuild": "npx tsx scripts/vercel-migrate.ts",
    "postinstall": "npx prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "^6.15.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.12",
    "geist": "^1.1.0",
    "hamburger-react": "^2.5.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.3",
    "nodemailer": "^7.0.6",
    "prisma": "^6.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-fast-marquee": "^1.6.2",
    "react-loading": "^2.0.3",
    "react-responsive": "^9.0.2",
    "react-scroll-parallax": "^3.4.5",
    "sharp": "^0.34.3",
    "swiper": "^11.0.5"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^3.3.5",
    "tailwindcss-3d": "^1.0.4",
    "tsx": "^4.20.4",
    "typescript": "5.2.2"
  }
}
